<script type="text/javascript">

    $("#TargetInput")
        .bind("keypress",
            function(e) {
                if (e.keyCode === 13) {
                    $("#scanInput").focus();
                    return false;
                }
            });
    $("#scanInput")
        .bind("keypress",
            function(e) {
                if (e.keyCode === 13) {
                    $("#itemCount").focus();
                    return false;
                }
            });

    $("#itemCount")
        .bind("keypress",
            function(e) {

                var itemCount = $("#itemCount").val();
                itemCount = itemCount.replace(".", ",");
                $("#itemCount").val(itemCount);

            });
</script>